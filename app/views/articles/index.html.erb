<div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <h1>Listing Articles</h1>
      <table>
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th colspan="3"></th>
        </tr>
       
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article), class: " label label-info"%></td>
            <td><%= link_to 'Edit', edit_article_path(article), class: " label label-warning" %></    td>
            <td><%= link_to 'Destroy', article_path(article),class: " label label-danger",
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
  <hr>
  <p><%= link_to 'New article', new_article_path, class: " label label-success article-newactive"   %>
  </div>
</div>